{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2018"],
    "target": "es2018",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "removeComments": true,
    "noImplicitOverride": true,
  },
  "exclude": [
    "node_modules"
  ]
}